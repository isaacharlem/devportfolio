---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{
  hasProjects && (
    <section id="projects" class="p-3 sm:p-4 md:p-6 lg:p-8">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-3 lg:gap-6 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-xl sm:text-2xl md:text-3xl xl:text-4xl font-bold text-gray-900">
              Projects
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-3">
              {siteConfig.projects.map((project, index) => {
                return (
                  <div class="group relative">
                    <div
                      class={`block relative p-2 sm:p-3 md:p-4 bg-gray-50 rounded-lg border border-gray-200 transition-all duration-300 ${
                        project.link
                          ? "hover:bg-white hover:shadow-xl hover:border-gray-300 hover:-translate-y-1"
                          : ""
                      }`}
                    >
                      {(project.link || project.github) && (
                        <div class="absolute top-2 right-2 sm:top-3 sm:right-3 md:top-4 md:right-4 flex gap-2">
                          {project.github && (
                            <a
                              href={project.github}
                              target="_blank"
                              rel="noopener noreferrer"
                              aria-label="GitHub"
                              class="w-6 h-6 sm:w-7 sm:h-7 md:w-8 md:h-8 flex items-center justify-center bg-gray-900 rounded-full text-white transition-all duration-300 group-hover:bg-gray-700"
                            >
                              <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="w-3 h-3 sm:w-3.5 sm:h-3.5 md:w-4 md:h-4"
                              >
                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" />
                              </svg>
                            </a>
                          )}
                          {project.link && (
                            <a
                              href={project.link}
                              target="_blank"
                              rel="noopener noreferrer"
                              aria-label={
                                project.linkType === "video"
                                  ? "Open video"
                                  : project.linkType === "app"
                                  ? "Open app"
                                  : "Open paper"
                              }
                              class="w-6 h-6 sm:w-7 sm:h-7 md:w-8 md:h-8 flex items-center justify-center bg-gray-900 rounded-full text-white transition-all duration-300 group-hover:bg-gray-700"
                            >
                              {project.linkType === "video" ? (
                                // Video icon
                                <svg
                                  xmlns="http://www.w3.org/2000/svg"
                                  viewBox="0 0 24 24"
                                  fill="none"
                                  stroke="currentColor"
                                  stroke-width="2"
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  class="w-3 h-3 sm:w-3.5 sm:h-3.5 md:w-4 md:h-4"
                                >
                                  <rect x="3" y="5" width="15" height="14" rx="2" ry="2" />
                                  <polygon points="10,9 15,12 10,15 10,9" />
                                </svg>
                              ) : project.linkType === "app" ? (
                                // App/external link icon
                                <svg
                                  xmlns="http://www.w3.org/2000/svg"
                                  viewBox="0 0 24 24"
                                  fill="none"
                                  stroke="currentColor"
                                  stroke-width="2"
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  class="w-3 h-3 sm:w-3.5 sm:h-3.5 md:w-4 md:h-4"
                                >
                                  <path d="M14 3h7v7" />
                                  <path d="M10 14L21 3" />
                                  <path d="M5 7a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2v-5" />
                                </svg>
                              ) : (
                                // Paper/document icon
                                <svg
                                  xmlns="http://www.w3.org/2000/svg"
                                  viewBox="0 0 24 24"
                                  fill="none"
                                  stroke="currentColor"
                                  stroke-width="2"
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  class="w-3 h-3 sm:w-3.5 sm:h-3.5 md:w-4 md:h-4"
                                >
                                  <path d="M14 3H7a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V9z" />
                                  <path d="M14 3v6h6" />
                                  <path d="M9 13h6" />
                                  <path d="M9 17h6" />
                                </svg>
                              )}
                            </a>
                          )}
                        </div>
                      )}

                      <div class="space-y-1.5">
                        <div>
                          <span
                            class="text-sm font-mono"
                            style={{ color: siteConfig.accentColor }}
                          >
                            0{index + 1}
                          </span>
                          <h3 class="text-base sm:text-lg font-bold text-gray-900 mt-0.5">
                            {project.link ? (
                              <a
                                href={project.link}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="hover:underline"
                              >
                                {project.name}
                              </a>
                            ) : (
                              project.name
                            )}
                          </h3>
                        </div>

                        <p
                          class={`text-xs sm:text-sm text-gray-600 leading-relaxed ${project.link ? "pr-8 sm:pr-10 md:pr-12" : ""}`}
                        >
                          {project.description}
                        </p>

                        {project.skills && project.skills.length > 0 && (
                          <div class="flex flex-wrap gap-0.5 sm:gap-1 pt-0.5">
                            {project.skills.map((skill) => (
                              <span
                                class={`px-1.5 sm:px-2 py-0.5 bg-gray-900 text-white rounded text-xs font-medium transition-all duration-300 ${
                                  project.link ? "group-hover:bg-gray-800" : ""
                                }`}
                              >
                                {skill}
                              </span>
                            ))}
                          </div>
                        )}
                      </div>
                    </div>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
