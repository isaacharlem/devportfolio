---
import { siteConfig } from "../config";
---

<section id="about" class="p-3 sm:p-4 md:p-6 lg:p-8">
  <div>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-3 lg:gap-6 items-start">
      <div class="lg:col-span-4">
        <h2
          class="text-xl sm:text-2xl md:text-3xl xl:text-4xl font-bold text-gray-900"
        >
          About Me
        </h2>
        <div
          class="w-[90px] h-[5px] mt-2 rounded-full"
          style={`background-color: ${siteConfig.accentColor}`}
        >
        </div>
      </div>

      <div class="lg:col-span-8 space-y-3">
        <p class="text-sm sm:text-base md:text-lg leading-relaxed text-gray-600 text-justify">
          {siteConfig.aboutMe}
        </p>

        <div class="pt-1">
          <div class="flex flex-wrap gap-1.5">
            {
              siteConfig.skills.map((skill) => (
                <span class="px-2 py-0.5 sm:py-1 bg-gray-100 text-gray-800 rounded-full text-xs font-medium hover:bg-gray-200 transition-colors duration-200">
                  {skill}
                </span>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
